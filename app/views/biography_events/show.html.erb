<div class="grid-x grid-padding-x">
  <div class="cell small-8">
    <h1><%= @biography_event.title %></h1>
  </div>
  <div class="cell small-4">
    <%= link_to('Delete', biography_event_path(@biography_event), class: 'button primary float-right', data: {confirm: "Are you sure?\nThis cannot be undone."}, method: :delete) %>
    <%= link_to('Edit', edit_biography_event_path(@biography_event), class: 'button primary float-right') %>
  </div>
</div>
<div class="grid-x grid-padding-x">
  <div class="cell">
    <p><strong><%= @biography_event.date_output %></strong></p>
    <p><strong><%= @biography_event.location %></strong></p>
    <% if @biography_event.person_tags.any? %>
      <p>People: <%= @biography_event.person_tags.map(&:name).join(', ') %></p>
    <% end %>
    <% if @biography_event.type_tags.any? %>
      <p>Type: <%= @biography_event.type_tags.map(&:name).join(', ') %></p>
    <% end %>
    <p><%= simple_format(@biography_event.description) %></p>
    <p><em>Added by: <%= @biography_event.user.first_name %></em></p>
    <hr>
    <% if @giles_clan_ids %>
      <% @giles_clan_ids.each do |id| %>
        <%= image_tag "avatar_#{id}.png", class: 'avatar' %>
      <% end %>
    <% end %>
  </div>
</div>
