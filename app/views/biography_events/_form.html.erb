<%= form_for @biography_event do |f| %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, autofocus: true, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :start_date %>
    <%= f.date_field :start_date, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :end_date %> <em>(Leave End Date blank unless the event spans more than 1 day)</em>
    <%= f.date_field :end_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, rows: 4, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :location %>
    <%= f.text_field :location, class: "form-control" %>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :person_tags %><br/>
        <%= f.collection_check_boxes(:person_tag_ids, PersonTag.all, :id, :name) %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :type_tags %><br/>
        <%= f.collection_check_boxes(:type_tag_ids, TypeTag.all, :id, :name) %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit %>
  </div>

<% end %>
