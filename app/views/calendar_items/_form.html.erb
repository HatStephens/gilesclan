<div class="form-group">
  <%= f.label :date_of_event %>
  <%= f.date_field :date_of_event, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :time_of_event %>
  <%= f.time_field :time_of_event, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>
</div>

<% if session[:event_type] == 'calendar' %>
  <div class="form-group">
    <%= f.label :event_type %>
    <%= f.select(:event_type, options_for_select([["West Ham", 'west_ham'],["Portugal", "portugal"],["England Rubgy", "england"], ["Birthday", 'birthday'],["Other", 'other']], @date.event_type), include_blank: true, class: "form-control") %>
</div>
<% end %>

<div class="form-group">
  <%= f.label :location %>
  <%= f.text_field :location, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :note %>
  <%= f.text_area :note, rows: 4, class: "form-control" %>
</div>

<%= f.submit class: "btn btn-primary" %>